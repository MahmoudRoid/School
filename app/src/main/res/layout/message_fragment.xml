<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <ir.elegam.school.Classes.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="از ارتباط شما با مجموعه کمال تشکر را داریم"
                    android:layout_gravity="right"
                    android:layout_margin="10dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/shape_spinner"
                    android:gravity="center"
                    android:layout_margin="10dp">

                    <Spinner
                        android:id="@+id/choose_receiver_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center|right"
                        android:paddingRight="30dp"/>
                </LinearLayout>

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:hint="  نام و نام خانوادگی"
                    android:background="@drawable/edittext_rounded"
                    android:layout_margin="10dp" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/phone_edt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:hint="  شماره تماس"
                    android:inputType="number"
                    android:maxLength="11"
                    android:background="@drawable/edittext_rounded"
                    android:layout_margin="10dp" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/matn_edt"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="top|right"
                    android:hint="  آدرس ( اختیاری )"
                    android:background="@drawable/edittext_rounded"
                    android:layout_margin="10dp"
                    android:gravity="top" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/send_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ارسال"
        android:textColor="@color/TXTcolor"
        android:background="@drawable/shape_normal_button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" />

</LinearLayout>
