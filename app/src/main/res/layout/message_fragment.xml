<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ir.elegam.school.Classes.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="از ارتباط شما با مجموعه کمال تشکر را داریم"
                android:textSize="@dimen/_12sdp"/>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/name_edt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_gravity="right"
                android:hint="  نام و نام خانوادگی"
                android:background="@drawable/edittext_rounded"/>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/phone_edt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_gravity="right"
                android:hint="  شماره تماس"
                android:inputType="number"
                android:maxLength="11"
                android:background="@drawable/edittext_rounded"/>




            <RelativeLayout
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_weight=".28"
                android:background="@drawable/spinner_border"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/choose_receiver_spinner"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:spinnerMode="dropdown"
                    android:layout_toLeftOf="@+id/drop_icon"
                    app:popupTheme="@style/MySpinner2"
                    android:background="@android:color/transparent"/>

                <ImageView
                    android:id="@+id/drop_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_drop" />

            </RelativeLayout>





            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/matn_edt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_gravity="right"
                android:hint="  آدرس ( اختیاری )"
                android:background="@drawable/edittext_rounded"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/send_btn"
                android:layout_width="300dp"
                android:layout_height="@dimen/_30sdp"
                android:text="ارسال"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_20sdp"
                android:background="@drawable/shape_button_blue_lowopacity"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
</RelativeLayout>
