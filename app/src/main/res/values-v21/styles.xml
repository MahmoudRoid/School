<resources xmlns:android="http://schemas.android.com/apk/res/android">
     <!--
        Android +5.0.1 Lolipop
    -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/pri700</item>
        <item name="colorPrimary">@color/pri500</item>
        <item name="colorAccent">@color/FABcolor</item>
        <item name="android:navigationBarColor">@color/pri700</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/TXTcolor</item>
        <item name="android:textColorSecondary">@color/white</item>

        <item name="android:windowBackground">@color/pri500</item>

        <item name="android:spinnerItemStyle">@style/MySpinner</item>
    </style>

    <style
        name="MySpinner">
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/TXTcolor</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:background">@color/pri100</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style
        name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/white</item>
    </style>
    
</resources>